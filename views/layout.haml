!!! 5
%html
  %head
    %title Credit Card Services
  %body
    %h1 Welcome to Credit Card Services by Enigma Manufacturing.
    - if @current_user
      = "Welcome #{@current_user.username} | "
      %a{href: '/logout'}
        logout
    - else
      %a{href: '/login'}
        = "login | "
      %a{href: '/register'}
        = "register"
    = haml :flash_bar    
    = yield
