%form{:action => '/register', :method => 'post', :id => 'user-form'}
 %label{:for => 'user_name'} Username:
 %input{:type => 'text', :name => 'username', :id => 'user_name'}
 %br
 %label{:for => 'user_full_name'} Full Name:
 %input{:type => 'text', :name => 'fullname', :id => 'user_full_name'}
 %br
 %label{:for => 'user_password'} Password:
 %input{:type => 'password', :name => 'password', :id => 'user_password'}
 %br
 %label{:for => 'user_confirm_password'} Confirm Password:
 %input{:type => 'password', :name => 'password_confirm', :id => 'user_password_confirm'}
 %br
 %label{:for => 'user_email'} Email Address:
 %input{:type => 'text', :name => 'email', :id => 'user_email'}
 %br
 %label{:for => 'user_address'} Address:
 %input{:type => 'text', :name => 'address', :id => 'user_address'}
 %br
 %label{:for => 'user_dob'} Date of Birth:
 %input{:type => 'text', :name => 'dob', :id => 'user_dob'}
 %br
 %input{:type => 'submit', :id => 'home-form-submit', :class => 'submit', :value => 'Register'}
