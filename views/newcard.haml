%h2 Register New Credit Card
  - if @creation
    %p
       = "#{@creation[:message]}"
    %form{:action => '/newcard', :method => 'post', :id => 'user-form'}
     %label{:for => 'card_number'} Credit Card Number:
     %input{:type => 'text', :name => 'cc_number', :id => 'cc_number', :placeholder => '(enter credit card number)'}
     %label{:for => 'owner'} Credit Card Owner:
     %input{:type => 'text', :name => 'cc_owner', :id => 'cc_owner', :placeholder => '(enter owners name)'}
     %label{:for => 'expiration_date'} Expiration Date:
     %input{:type => 'text', :name => 'cc_expiration', :id => 'cc_expiration', :placeholder => '(enter expiration date)'}
     %label{:for => 'network'} Credit Network:
     %input{:type => 'text', :name => 'cc_networ', :id => 'cc_network', :placeholder => '(enter credit network)'}
     %input{:type => 'submit', :id => 'home-form-submit', :class => 'submit', :value => 'Register'}

